<div class="row">
    
    <div class="col-md-3">
        <div class="col-md-6"><strong>Color</strong> shows gene regulation</div>
        <div id="color_scale" class="col-md-6">
            <svg width="120" height="40"><!-- 'up', 'none', 'down' -->
                <rect x="0" y="10" width="38" height="7" fill="#2171b5"></rect>
                <rect x="38" y="10" width="38" height="7" fill="#BECCAE"></rect>
                <rect x="76" y="10" width="38" height="7" fill="#C72D0A"></rect>
                
                <text x="10" y="24" class="scale_text">Up</text>
                <text x="44" y="24" class="scale_text">None</text>
                <text x="80" y="24" class="scale_text">Down</text>
            </svg>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="col-md-7"><strong>Dark Borders</strong> show mutations</div>
        <div id="border_scale" class="col-md-5">
            <svg width="40" height="40">
                <circle cx="20" cy="20" fill="none" r="18" stroke-width="1.2" stroke="#2c3e50"></circle>
            </svg>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="col-md-7"><strong>Size</strong> shows Log2 fold change</div>
        <div id="size_scale" class="col-md-5">
            <svg width="40" height="40">
                <circle cx="20" cy="20" style="stroke-dasharray: 2 2" fill="none" r="18" stroke-width="1" stroke="#5f6062"></circle>
                <circle cx="20" cy="31" style="stroke-dasharray: 2 2" fill="none" r="6" stroke-width="1" stroke="#5f6062"></circle>
            </svg>
        </div>
    </div>
    
    <ul class="nav nav-pills pull-right">
        <li role="presentation"><input type="text" class="form-control" placeholder="Search gene by name..."></li>
    </ul>
</div>
